<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="4">

        <Button
            android:id="@+id/do_you_speak__english_button"
            android:allowUndo="true"
            android:onClick="playphrase"
            android:tag="doyouspeakenglish"
            android:text="do you\n speak english?"
            android:textAllCaps="true"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/GoodEvening_button"
            android:allowUndo="true"
            android:onClick="playphrase"
            android:tag="goodevening"
            android:text="good evening"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/hello_button"
            android:onClick="playphrase"
            android:tag="hello"
            android:text="hello"
            android:textAllCaps="true"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/how_r_u_button"
            android:onClick="playphrase"
            android:tag="howareyou"
            android:text="how are you"
            android:textAllCaps="true"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/I_live_in_button"
            android:onClick="playphrase"
            android:tag="ilivein"
            android:text="i live in...."
            android:textAllCaps="true"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/my_name_is_button"
            android:onClick="playphrase"
            android:tag="mynameis"
            android:text="my name is"
            android:textAllCaps="true"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/Please_button"
            android:onClick="playphrase"
            android:tag="please"
            android:text="please"
            android:textAllCaps="true"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/welcome_button"
            android:onClick="playphrase"
            android:tag="welcome"
            android:text="welcome"
            android:textAllCaps="true"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />
    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>